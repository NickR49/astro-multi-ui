---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- TODO Add text-wrap: balance -->
<h1 class="text-gradient text-3xl" style="text-wrap: balance">{title}</h1>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
    margin-bottom: 1rem;
    text-align: center;
  }
</style>
